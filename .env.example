# Environment Configuration for Shopify Insights Fetcher

# API Configuration
APP_NAME=Shopify Insights Fetcher
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Database Configuration (if you want to use MySQL for caching)
DATABASE_URL=mysql+pymysql://user:password@localhost/shopify_insights
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Scraping Configuration
